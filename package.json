{
  "name": "see-2",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "account": "pnpm run --filter=@see-2/hardhat account",
    "chain": "pnpm run --filter=@see-2/hardhat chain",
    "fork": "pnpm run --filter=@see-2/hardhat fork",
    "deploy": "pnpm run --filter=@see-2/hardhat deploy",
    "verify": "pnpm run --filter=@see-2/hardhat verify",
    "hardhat-verify": "pnpm run --filter=@see-2/hardhat hardhat-verify",
    "compile": "pnpm run --filter=@see-2/hardhat compile",
    "generate": "pnpm run --filter=@see-2/hardhat generate",
    "flatten": "pnpm run --filter=@see-2/hardhat flatten",
    "hardhat:lint": "pnpm run --filter=@see-2/hardhat lint",
    "hardhat:lint-staged": "pnpm run --filter=@see-2/hardhat lint-staged",
    "hardhat:format": "pnpm run --filter=@see-2/hardhat format",
    "hardhat:test": "pnpm run --filter=@see-2/hardhat test",
    "test": "pnpm run hardhat:test",
    "format": "pnpm run next:format && pnpm run hardhat:format",
    "start": "pnpm run --filter=@see-2/nextjs dev",
    "next:lint": "pnpm run --filter=@see-2/nextjs lint",
    "next:format": "pnpm run --filter=@see-2/nextjs format",
    "next:check-types": "pnpm run --filter=@see-2/nextjs check-types",
    "next:build": "pnpm run --filter=@see-2/nextjs build",
    "next:serve": "pnpm run --filter=@see-2/nextjs serve",
    "postinstall": "husky install",
    "precommit": "lint-staged",
    "vercel": "pnpm run --filter=@see-2/nextjs vercel",
    "vercel:yolo": "pnpm run --filter=@see-2/nextjs vercel:yolo"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3"
  },
  "engines": {
    "node": ">=18.17.0"
  }
}
